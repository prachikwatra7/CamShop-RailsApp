

<h1 align="center">Welcome!!!</h1>

<h2 align="center">Listing All categories</h2>

<% @categories.each do |category| %>

  <div class="w3-container w3-padding-32 w3-theme-l5 w3-center" id="contact">
    <div class="w3-row">
      <h3 align="center"><span class="w3-xlarge w3-border-teal w3-bottombar">Company name: <%= category.name %></span></h3>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Feature: <%= category.feature %></p>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Model: <%= category.model %></p>
      <% category.save %>
      
     </div> 
  </div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
      <tr>
        <td class="w3-large w3-border-teal "><%= link_to 'Explore our products', category_path(category) %> |</td> 
        <% if logged_in? && current_user.admin? %>
        <td class="w3-large w3-border-teal "><%= link_to 'Edit', edit_category_path(category) %> |</td> 
        <td class="w3-large w3-border-teal "><%= link_to 'Destroy',category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    
   </tbody>
</table>
<br>
  <% end %>
  <% if logged_in? && current_user.admin? %>
  <h3 align="center"><spam><%= link_to 'Add new company/category', new_category_path, class: "w3-button w3-center w3-theme w3-hover-teal w3-medium w3-theme btn w3-bar-item w3-text-white"%> </spam></h3>
  <% end %>

