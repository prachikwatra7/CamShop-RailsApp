

<h1 align="center">Welcome!!!</h1>

<h2 align="center">Listing All products</h2>

<% @products.each do |product| %>

  <div class="w3-container w3-padding-32 w3-theme-l5 w3-center" id="contact">
    <div class="w3-row">
      <h3 align="center"><span class="w3-xlarge w3-border-teal w3-bottombar">Company name: <%= product.name %></span></h3>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Feature: <%= product.description %></p>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Model: <%= product.price %></p>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Model: <%= product.make %></p>
      <% product.save %>
      <%= link_to 'Buy Now', cart_path, class: "w3-button w3-center w3-theme w3-hover-teal w3-xlarge w3-theme btn w3-bar-item w3-text-white",  data: { confirm: 'Are you sure?' } %> 
     </div> 
  </div>


<% end %>

