

<h1 align="center">Welcome!!!</h1>

<h2 align="center">Listing All Users</h2>

<% @users.each do |user| %>

  <div class="w3-container w3-padding-32 w3-theme-l5 w3-center" id="contact">
    <div class="w3-row">
      <h3 align="center"><span class="w3-xlarge w3-border-teal w3-bottombar">User: <%= user.username %></span></h3>
      <p><i class="fa fa-stop-circle-o w3-text-teal w3-xlarge"></i> Email-id: <%= user.email %></p>
      <% user.save %>
     </div> 
  </div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
      <tr>
        <td class="w3-large w3-border-teal "><%= link_to 'Show', user_path(user) %> |</td> 
        <td class="w3-large w3-border-teal "><%= link_to 'Edit', edit_user_path(user) %> |</td> 
        <td class="w3-large w3-border-teal "><%= link_to 'Destroy',user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    
   </tbody>
</table>
<br>
  <% end %>

